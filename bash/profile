BREW_PREFIX=`brew --prefix`

export LC_CTYPE=fr_FR.UTF-8
export LC_ALL=fr_FR.UTF-8

# XDG Specification
export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:=~/.config}
export XDG_DATA_HOME=${XDG_DATA_HOME:=~/.local/share}
export XDG_CACHE_HOME=${XDG_CACHE_HOME:=~/.cache}

# path
export PATH=$BREW_PREFIX/bin:$BREW_PREFIX/sbin:$HOME/Applications/Scripts:$PATH

# z.sh
if [ -s "$BREW_PREFIX/etc/profile.d/z.sh" ]; then
  export _Z_DATA=$XDG_DATA_HOME/z/z
  source $BREW_PREFIX/etc/profile.d/z.sh
fi

# ruby
if which ruby >/dev/null && which gem >/dev/null; then
  export PATH="$(ruby -rubygems -e 'puts Gem.user_dir')/bin:$PATH"
fi

# node
export NODE_PATH=$BREW_PREFIX/lib/node_modules
export NVM_DIR="$XDG_DATA_HOME/nvm"
[ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"
if which yarn >/dev/null; then
  export PATH=`yarn global bin`:$PATH
elif which npm >/dev/null; then
  export PATH=`npm bin -g`:$PATH
fi

