# Use nocorrect alias to prevent auto correct from "fixing" these
alias sudo='nocorrect sudo'

# Directory movement
alias ..='cd ..'
alias ...='cd ../..'
alias ls="ls -F"
alias lsa='ls -lah'
alias l='ls -lah'
alias ll='ls -lh'
alias la='ls -lAh'

# Editors
alias vim=nvim
alias v=vim

# Tools
alias rg='rg --type-add "drupal:*.{php,tpl.php,module,inc,install,view,engine,info}"'

