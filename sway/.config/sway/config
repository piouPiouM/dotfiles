# Logo key. Use Mod1 for Alt.
set $mod Mod4

# Home row direction keys, like vim
set $left h
set $down j
set $up k
set $right l

set $term kitty

# set $menu dmenu_path | dmenu | xargs swaymsg exec --
set $menu rofi -show drun -run-command 'swaymsg exec -- {cmd}'

include ./config.d/*
include /etc/sway/config.d/*
