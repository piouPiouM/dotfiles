# vim: ft=conf

# Classical configuration.
--engine=auto
--color=auto
--follow
--hidden
--ignore
--smart-case
--no-require-git
--one-file-system

# Exclude specific files not supported by the global .ignore file
-g
!**/chromecast/polyfill.js

# Colors, like Ag
# --colors=line:fg:yellow
# --colors=line:style:bold
# --colors=path:fg:green
# --colors=path:style:bold
# --colors=match:fg:black
# --colors=match:bg:yellow
# --colors=match:style:nobold

# Update 'docker' type.
--type-add
docker:docker-compose*.yml

# Update 'js' type
--type-add
js:*.ts{,x}
--type-add
js:!*.js.snap
--type-add
js:!*.spec.js
--type-add
js:!*.int.js

# Add 'drupal' type.
--type-add
drupal:*.{php,tpl.php,module,inc,install,view,engine,info,theme,html.twig,info.yml}

# Add a shortcut for package.json files.
--type-add
npm:package.json

# Add a 'functional tests' type
--type-add
ft:*.feature

# Add a 'jest tests' type
--type-add
jest:*.{int,spec}.{js,ts}

--type-add
int:*.int.{js,ts}

# Add an global 'ignore' type, like the wildignore option in Vim.
--type-add
ignore:*.{aux,out,toc,luac,o,obj,exe,dll,manifest,pyc,pyo,spl,sw?}
--type-add
ignore:*.{sassc,scssc,sass-cache,svn,git,gitkeep,bundle,DS_Store}
--type-add
ignore:.?{cache,node_modules,tmp,vendors?}