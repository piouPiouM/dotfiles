[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore_global
	editor = vim
	whitespace = -trailing-space
[alias]
	ci = commit
	st = status
	amend = commit --amend
	who = shortlog -sne
  lg = log --graph --pretty=tformat:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%an %ar)%Creset'
	oneline = log --pretty=oneline --abbrev-commit --graph --decorate
	changes = diff --name-status
	dic = diff --cached
	diffstat = diff --stat
	svnpull = svn rebase
	svnpush = svn dcommit
	lc = !git lg @{u}..
	addm = !git-ls-files -m -z | xargs -0 git-add && git status
	addu = !git-ls-files -o --exclude-standard -z | xargs -0 git-add && git status
	rmm = !git ls-files -d -z | xargs -0 git-rm && git status
	mate = !git-ls-files -m -z | xargs -0 mate
	mateall = !git-ls-files -m -o --exclude-standard -z | xargs -0 mate
	undo = git reset --soft HEAD^
	oops = commit --amend --no-edit
[push]
	default = upstream
[credential]
	helper = osxkeychain
[rerere]
	enabled = true
	autoupdate = true
[status]
	submoduleSummary = true
	showUntrackedFiles = all
[diff]
	submodule = log
	wordRegex = .
	mnemonicPrefix = true
[mergetool]
  keepBackup = false
  keepTemporaries = false
  prompt = false
[fetch]
	recurseSubmodules = on-demand
[pull]
	rebase = preserve
[merge]
	conflictStyle = diff3
[grep]
	extendedRegexp = true
[log]
	abbrevCommit = true
[include]
	path = ~/.local.gitconfig
